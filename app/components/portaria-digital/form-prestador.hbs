<form {{on "submit" this.salvarPrestador}} class="grid gap-4">

  <Input @value={{this.nome}} placeholder="Nome completo" class="input" />

  <Input @value={{this.empresa}} placeholder="Empresa" class="input" />

  <Input @value={{this.funcao}} placeholder="Função" class="input" />

  <Input @value={{this.documento}} placeholder="Documento de identidade" class="input" />

  <Input @value={{this.unidadeId}} placeholder="Unidade ou local de trabalho" class="input" />

  <Input @value={{this.responsavelId}} placeholder="Responsável interno" class="input" />

  <label class="block">
    Documentos (PDF, imagens):
    <input type="file" multiple {{on "change" this.uploadDocumentos}} class="mt-1 block w-full" />
  </label>

  <button type="submit" class="btn-primary">Salvar Prestador</button>
</form>
