<div class="financeiro-container">
  <h2>Resumo Financeiro</h2>

  {{!-- Resumo --}}
  <div class="resumo">
    <p>📥 Receita do Mês: <strong>R$ 10.000,00</strong></p>
    <p>📤 Despesas do Mês: <strong>R$ 7.500,00</strong></p>
    <p>💰 Saldo Atual: <strong>R$ 2.500,00</strong></p>
  </div>

  {{!-- Tabela de Despesas --}}
  <h3>Despesas do Mês</h3>
  <table class="tabela-financeiro">
    <thead>
      <tr>
        <th>Data</th>
        <th>Descrição</th>
        <th>Valor</th>
        <th>Categoria</th>
        <th>Status</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>05/04/2025</td>
        <td>Limpeza das áreas comuns</td>
        <td>R$ 800,00</td>
        <td>Limpeza</td>
        <td class="pago">Pago</td>
      </tr>
      <tr>
        <td>10/04/2025</td>
        <td>Conserto do portão</td>
        <td>R$ 1.200,00</td>
        <td>Manutenção</td>
        <td class="pendente">Pendente</td>
      </tr>
    </tbody>
  </table>

  {{!-- Relatórios --}}
  <div class="relatorios">
    <h3>Relatórios</h3>
    <button type="button">📄 Ver Balancete do Mês</button>
    <button type="button">⬇️ Baixar Relatório em PDF</button>
  </div>

  {{!-- Voltar --}}
  <LinkTo @route="index" class="button">Voltar ao Menu</LinkTo>
</div>
